@{
    ViewBag.Title = "Дома";
}

@Html.Partial("_WelcomePartial")

@if (User.Identity.IsAuthenticated)
{
    @Html.Partial("_LoggedInUserPartial");
}

<div class="row">
    @if (User.IsInRole("Administrator"))
    {
        @Html.Partial("_AdminFunctionsPartial");
    }
    else if (User.IsInRole("Doctor"))
    {
        @Html.Partial("_DoctorFunctionsPartial");
    }
</div>

