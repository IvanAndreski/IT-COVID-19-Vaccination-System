@model IEnumerable<COVID_19_Vaccination_System.Models.ChangeInVaccinesNewsModel>

@{
    foreach (var v in Model)
    {
        <div class="panel panel-default">
            <div class="panel-heading">
                <h5>@v.Date</h5>
                <p>Промена на дози на следниве вакцини:</p>
            </div>
            <div class="panel-body">
                <ul class="list-group list-group-flush">
                    @if (v.AstraZenecaChange > 0)
                    {
                        <li class="list-group-item">AstraZeneca: +@v.AstraZenecaChange</li>
                    }
                    @if (v.PfizerChange > 0)
                    {
                        <li class="list-group-item">Pfizer: +@v.PfizerChange</li>
                    }
                    @if (v.SputnikChange > 0)
                    {
                        <li class="list-group-item">Sputnik: +@v.SputnikChange</li>
                    }
                    @if (v.SinopharmChange > 0)
                    {
                        <li class="list-group-item">Sinopharm: +@v.SinopharmChange</li>
                    }
                </ul>
            </div>
        </div>
    }
}
